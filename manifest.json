{
    "manifest_version": 2,
    "name": "Kronos Killer",
    "description": "Kronos Killer Chrome Extension",
    "version": "0.0.0.1",
    "icons": {
        "128": "128.png",
        "48": "48.png",
        "16": "16.png"
    },
    "background": {
        "scripts": [
            "event.js"
        ],
        "persistent": true
    },
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "browser_action": {
        "default_title": "Kronos Killer",
        "default_popup": "popup.html"
    },
    "content_scripts": [{
        "matches": ["*://*/*"],
        "css": ["style.css"],
        "js": ["content.js"],
        "run_at": "document_idle",
        "all_frames": true
    }]
}
