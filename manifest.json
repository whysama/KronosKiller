{
    "manifest_version": 2,
    "name": "Kronos Killer",
    "description": "Kronos Killer Chrome Extension",
    "version": "0.0.0.1",
    "background": {
        "scripts": [
            "event.js"
        ],
        "persistent": true
    },
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "browser_action": {
        "default_title": "Kronos Killer",
        "default_popup": "popup.html"
    },
    "content_scripts": [{
        "matches": ["*://*/*"],
        "css": [],
        "js": ["content.js"],
        "run_at": "document_idle",
        "all_frames": false
    }]
}
